{
  "scripts": {
    "ava": "npm run build && nyc ava ./test/**/*-test.js --serial --verbose",
    "build": "gulp build",
    "docs": "typedoc ./src/**/*.ts --out ./docs/ --mode file --excludePrivate --excludeProtected --module umd --ignoreCompilerErrors",
    "lint": "tslint 'src/**/*'",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "npm run ava && npm run lint",
    "typescript:commonjs": "tsc -p ./tsconfigs/commonjs.json --declaration --skipLibCheck",
    "typescript:test": "tsc -p ./tsconfigs/test.json --declaration --skipLibCheck",
    "version": "echo 'TODO: ./build-docs && git add docs'"
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "**/utils/glob-promise.*",
      "test/**/*"
    ]
  },
  "devDependencies": {
    "@hopin/wbt-ts-node": "0.0.16",
    "@types/fs-extra": "5.0.4",
    "@types/glob": "7.1.1",
    "@types/handlebars": "4.0.39",
    "@types/json5": "0.0.30",
    "@types/marked": "0.4.2",
    "@types/meow": "5.0.0",
    "ava": "0.25.0",
    "coveralls": "3.0.2",
    "gulp": "4.0.0",
    "nyc": "13.0.1",
    "tslint": "5.11.0"
  },
  "dependencies": {
    "@hopin/logger": "1.0.2",
    "@hopin/markdown": "0.1.0",
    "@hopin/render": "^3.1.0",
    "chalk": "^2.4.1",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.2",
    "gray-matter": "^4.0.1",
    "json5": "^2.0.1",
    "meow": "^5.0.0"
  },
  "keywords": [
    "hopin",
    "static-site"
  ],
  "files": [
    "build/**/*"
  ],
  "homepage": "https://github.com/gauntface/hopin-static-site#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gauntface/hopin-static-site.git"
  },
  "bugs": {
    "url": "https://github.com/gauntface/hopin-static-site/issues"
  },
  "name": "@hopin/static-site",
  "description": "Module to generate a static site.",
  "author": "gauntface",
  "license": "Apache-2.0",
  "main": "./build/index.js",
  "typings": "./build/index.d.ts",
  "bin": {
    "hopin-static-site": "./build/cli.js"
  },
  "version": "0.1.0"
}
